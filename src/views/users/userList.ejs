<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head.ejs") %>
    <link rel="stylesheet" href="/css/list-users-styles.css">
</head>
<body>
    <%- include("../partials/header.ejs") %>
    <title>Listar usuarios | One Step</title>

    <main>
        <h1>Usuarios</h1>
           
        <section>
            <article class="table-header">
                <h2>Avatar</h2>
                <h2>Datos</h2>
                <h2>Editar / Eliminar</h2>
            </article>
        <% users.forEach(user => { %>
            <article class="users-list">
                <figure class="users-list-avatar">
                    <img src="/img/usersAvatars/<%=user.image%>" alt="<%=user.name%>">
                </figure>
                <section class="users-list-description">
                    <h4><%= user.name %></h4>
                    <h4><%= user.lastName %></h4>
                    <h5><%= user.email %></h5>
                </section>
                <section class="users-list-actions">
                    <a href="./edit/<%= user.id %>" class="edit"><i class="fas fa-user-edit" alt="delete"></i></a>
                    <a href="#" class="delete"><i class="fas fa-user-times"></i></a>
                </section>
            </article>
            <% }) %>
        </section>

    </main>

    <%- include("../partials/footer.ejs") %>
</body>
</html>